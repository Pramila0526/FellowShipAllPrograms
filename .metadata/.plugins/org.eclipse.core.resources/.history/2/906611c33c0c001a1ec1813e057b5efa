package com.bridgelabz.fellowshipprogramss.junit;

import com.bridgelabz.fellowshipprogramss.utility.Utility;

public class SwapNibbles
{
	public int swapNibbles(int x)
	{
		return((x & 0X0F)<<4 | (x & 0XF0)>>4);
	}
	
	public static void main(String[] args)
	{
	    System.out.println("Enter the number");
	    int number=Utility.IntegerInput();
		System.out.println(number);
		SwapNibbles sn=new SwapNibbles();
		int c=sn.swapNibbles(number);
		System.out.println(c);
		int cnt=0;
		for(int i=0;i<=10;i++)
		{
			if(c==Math.pow(2, i))
			{
				cnt=cnt+1;

			}
        }
		if(cnt==1)
		{
			System.out.println(c+" is power of 2");
		}
		else
		{
			System.out.println(c+" is not the power of 2");
		}

	}
}