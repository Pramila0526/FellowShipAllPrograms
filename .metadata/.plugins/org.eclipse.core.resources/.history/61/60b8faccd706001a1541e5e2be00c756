package com.bridgelabz.exceptionhandling;



 class Program6 {

	/*
	 * public static void main(String[] args) { private int salary=0; private int
	 * age=0; public int getSalary() { if(salary<0) throw new
	 * RuntimeException("Salary cannot be less than 0"); return 0; } public int
	 * getAge() { if(age<0) throw new RuntimeException("age cannot be less than 0");
	 * return 0; }
	 * 
	 * 
	 * }
	 */

			private int salary = 0;
			private int age = 0;
			public int getSalary() {
				if(salary < 0 )
					throw new RuntimeException("Salary cannot be less than zero");
				return salary;
			}
			
			public int getAge() {
				if(age < 0 )
					throw new RuntimeException("Age cannot be negative");
				return age;
			}
		}


